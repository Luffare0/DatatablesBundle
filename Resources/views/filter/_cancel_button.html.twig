{% if column.filter.cancelButton is same as(true) %}
    <script type="text/javascript">
        document.addEventListener("DOMContentLoaded", function () {
            $("#{{ cancel_button_id_selector }}").click(function () {
                if ('' != $("#{{ filter_id_selector }}").val()) {
                    $("#{{ filter_id_selector }}")
                        .val('')
                        .change();
                }
            });
        }, false);
    </script>
{% endif %}
